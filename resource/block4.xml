<?xml version="1.0" encoding="euc-kr" ?>
<BlockGame>
	<Setting>
		<Screen>
			<Size w="1024" h="768"></Size>
		</Screen>
		<Bg>
			<BgImg bgImg="images/sky.jpg"></BgImg>
			<BgMusic bgMusic ="sounds/bird.wav"></BgMusic>
			<FireSound fireSound="sounds/gun.wav"></FireSound>
		</Bg>
		<GameMode>
			<BlockMode blockMode="limit"></BlockMode>
			<ShotMode shotMode="auto"></ShotMode>
			<BlockDirection blockDirection="random"></BlockDirection>
			<BulletBlockDirection bulletBlockDirection="updown"></BulletBlockDirection>
		</GameMode>
	</Setting>
<GamePanel>
	<Player>
		<BulletBlock blockw="200" blockh="50" blockx="10" blocky="300" bulletw="30" bulleth="50" firetimems="50" bulletimg ="images/bullet.png" bulletdistance="30"
					 blockimg="images/plane.png"></BulletBlock>
	</Player>
	<Stage>
		<PlusSpeed plusSpeed="10"></PlusSpeed>
		<StageBlock stageblockx="500" stageblocky="100" stageblockw="300" stageblockh="30" stagecontent="Stage : "
					stagefontname="고딕체" stagefontstyle="1" stagefontsize="30" stagefontcolor="10"></StageBlock>
	</Stage>
	<Score>
		<Rule rule="100"></Rule>
		<ScoreBlock scoreblockx="500" scoreblocky="200" scoreblockw="300" scoreblockh="30" scorecontent="점수 : "
					scorefontname="고딕체" scorefontstyle="1" scorefontsize="30" scorefontcolor="10"></ScoreBlock>
	</Score>
	<Block>
		<Obj x="500" y="300" w="100" h="100" randscope="100" life="1" speed="10" img="images/sparrow1.png" shotimg="images/shot.png"></Obj>
		<Obj  x="800" y="100" w="100" h="100"  randscope="100" life="2" speed="60" img="images/sparrow1.png" shotimg="images/shot.png"/>
		<Obj  x="100" y="200" w="100" h="100"  randscope="100" life="3" speed="5" img="images/sparrow1.png" shotimg="images/shot.png"/>
		<Obj x="300" y="400" w="100" h="100" randscope="100" life="4" speed="10" img="images/minibird1.png" shotimg="images/shot.png"></Obj>
		<Obj  x="600" y="300" w="100" h="100"  randscope="100" life="5" speed="1" img="images/minibird1.png" shotimg="images/shot.png"/>
		<Obj  x="800" y="500" w="100" h="100"  randscope="100" life="6" speed="3" img="images/minibird1.png" shotimg="images/shot.png"/>
		<Special x="800" y="500" w="100" h="100" rate="100" randscope="100" life="6" speed="30" img="images/bomb.png" shotimg="images/bombshot.png"></Special>
	</Block>
</GamePanel>
</BlockGame>
